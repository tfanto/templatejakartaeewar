<configuration>

   <appender class="ch.qos.logback.core.rolling.RollingFileAppender" name="FILE">
        <append>true</append>
        <file>c:/app/logs/aid/aid.log</file>
        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <fileNamePattern>/app/logs/aid/aid.%d{yyyy-ww}.%i.zip
            </fileNamePattern>
            <maxHistory>30</maxHistory>
            <TimeBasedFileNamingAndTriggeringPolicy class="ch.qos.logback.core.rolling.SizeAndTimeBasedFNATP">
                <MaxFileSize>20MB</MaxFileSize>
            </TimeBasedFileNamingAndTriggeringPolicy>
        </rollingPolicy>
        <encoder>
            <pattern>%d{yyyy-MM-dd HH:mm:ss} [%thread] MDC=%X{REQUEST_ID} %-5level %logger{40} %X{userId}- %msg%n</pattern>
        </encoder>
    </appender>

	<appender name="STDOUT"
		class="ch.qos.logback.core.ConsoleAppender">
		<encoder>
			<Pattern>%date %-5level %logger MDC=%X{REQUEST_ID} - %msg%n</Pattern>
		</encoder>
	</appender>

	<appender name="HTTP"
		class="ch.qos.logback.core.ConsoleAppender">
		<encoder>
			<Pattern>%date{yyyy-MM-dd HH:mm:ss} %-5level %logger MDC=%X{REQUEST_ID}
				%msg%n</Pattern>
		</encoder>
	</appender>

	<logger name="app" level="TRACE">
		<appender-ref ref="FILE" />
	</logger>
	<logger name="rest.api" level="DEBUG">
		<appender-ref ref="HTTP" />
	</logger>
	<root level="DEBUG">
		<appender-ref ref="STDOUT" />
	</root>
</configuration>